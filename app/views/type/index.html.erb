

<div class="row">
  <% @types.each do |type| %>
    <div class="col-md-4">
      <div class="container text-center">
        <%= link_to type_path(type) do %>
            <div class="<%= type.type_name %>">
              <h4><%= type.type_name %></h4>
            </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<nav aria-label="Page navigation example">
  <ul class="pagination">
    <% if @types.prev_page %>
      <li class="page-item">
        <%= link_to "Previous", request.params.merge(page: @types.prev_page), class: "page-link" %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
      </li>
    <% end %>
    <% @types.total_pages.times do |i| %>
      <% if @types.current_page == i + 1 %>
        <li class="page-item active" aria-current="page">
          <a class="page-link" href="#"><%= i + 1 %></a>
        </li>
      <% else %>
        <li class="page-item">
          <%= link_to i + 1, request.params.merge(page: i + 1), class: "page-link" %>
        </li>
      <% end %>
    <% end %>
    <% if @types.next_page %>
      <li class="page-item">
        <%= link_to "Next", request.params.merge(page: @types.next_page), class: "page-link" %>
      </li>
    <% else %>
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Next</a>
      </li>
    <% end %>
    <li class="page-item">
      <%= link_to "Last", request.params.merge(page: @types.total_pages), class: "page-link" %>
    </li>
  </ul>
</nav>

